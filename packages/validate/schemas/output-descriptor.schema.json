{
  "description": "Formats of output JSON schema files",
  "type": "object",
  "properties": {
    "filename": {
      "description": "Name of output schema file",
      "type": "string"
    },
    "format": {
      "description": "Data format",
      "enum": [
        "json"
      ],
      "type": "string"
    },
    "indent": {
      "description": "JSON indentation",
      "anyOf": [
        {
          "enum": [
            "none",
            "tab"
          ],
          "type": "string"
        },
        {
          "type": "number"
        }
      ]
    }
  },
  "required": [
    "filename"
  ],
  "$schema": "http://json-schema.org/draft-07/schema#"
}
